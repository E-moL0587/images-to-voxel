@page "/"
@using Microsoft.AspNetCore.Components

@code {
  private string activePage = "title";
  private void SetActivePage(string page) { activePage = page; }
}

<PageTitle>My Blazor App</PageTitle>

@if (activePage == "title") { <Title SetActivePage="SetActivePage" /> }
@if (activePage == "voxel") { <Voxel /> }
@if (activePage == "pixels") { <Pixels /> }
@if (activePage == "mesh") { <Mesh /> }
@if (activePage == "pixels" || activePage == "voxel" || activePage == "mesh") { <Menu SetActivePage="SetActivePage" /> }
@if (activePage == "describe") { <Describe SetActivePage="SetActivePage" /> }
