@page "/"
@using Microsoft.AspNetCore.Components
@using ImagesToVoxel.Pages

@code {
  private string activePage = "title";
  private void SetActivePage(string page) { activePage = page; }
}

<PageTitle>My Blazor App</PageTitle>

@if (activePage == "title") { <Title SetActivePage="SetActivePage" /> }
else if (activePage == "describe") { <Describe SetActivePage="SetActivePage" /> }
else {
  @if (activePage == "voxel") { <Voxel SetActivePage="SetActivePage" /> }
  @if (activePage == "pixels") { <Pixels SetActivePage="SetActivePage" /> }
  @if (activePage == "mesh") { <Mesh SetActivePage="SetActivePage" /> }
  <Menu SetActivePage="SetActivePage" />
}
