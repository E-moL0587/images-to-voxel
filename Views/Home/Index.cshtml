<style>
  .hidden { display: none; }
  .title { position: fixed; top: 20%; text-align: center; width: 100%; }
  .image { position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 150px; }
  .button { position: fixed; bottom: 20%; text-align: center; width: 100%; }
</style>

<section id="titleScreen">
  <h3 class="title">Images to Voxel</h3>
  <img class="image" src="~/images/title.png" alt="title" />
  <a class="button" id="titleButton">Tap to start</a>
</section>

<section>
  @await Html.PartialAsync("Voxel")
<section>

<section>
  <button onclick="showScene('voxel')">Voxel</button>
  <button onclick="showScene('mesh')">Mesh</button>
  <button onclick="showScene('smooth')">Smooth</button>
</section>

<section>
  @await Html.PartialAsync("Pixels")
<section>

<section id="menuScreen" class="hidden">
  <header></header>
  <footer></footer>
</section>
